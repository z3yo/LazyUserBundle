{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('WeCookUserBundle_check') }}" method="post">
    <label for="username">{{ 'security.login.username'|trans({}, 'forms') }} :</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">{{ 'security.login.password'|trans({}, 'forms') }}:</label>
    <input type="password" id="password" name="_password" />

    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">{{ 'security.login.rememberme'|trans({}, 'forms') }}</label>
    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">{{ 'security.login.submit'|trans({}, 'forms') }}</button>
</form>